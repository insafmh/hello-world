{% extends 'base.html.twig' %}

{% block body %}
    <h1>Comd</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comd.id }}</td>
            </tr>
            <tr>
                <th>Prixtot</th>
                <td>{{ comd.prixTot }}</td>
            </tr>
            <tr>
                <th>Datecommande</th>
                <td>{% if comd.dateCommande %}{{ comd.dateCommande|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('comd_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('comd_edit', { 'id': comd.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
